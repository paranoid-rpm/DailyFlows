<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Standard theme -->
    <style name="Theme.DailyFlow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/df_primary</item>
        <item name="colorPrimaryVariant">@color/df_primary_variant</item>
        <item name="colorSecondary">@color/df_secondary</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimations</item>
    </style>

    <!-- Apple Glass style -->
    <style name="Theme.DailyFlow.AppleGlass" parent="Theme.DailyFlow">
        <item name="materialCardViewStyle">@style/Widget.DailyFlow.Card.Glass</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Widget.DailyFlow.Card.Glass" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardBackgroundColor">#88FFFFFF</item>
        <item name="cardElevation">12dp</item>
    </style>

    <!-- Pixel Minimalism -->
    <style name="Theme.DailyFlow.PixelMin" parent="Theme.DailyFlow">
        <item name="materialCardViewStyle">@style/Widget.DailyFlow.Card.Pixel</item>
    </style>

    <style name="Widget.DailyFlow.Card.Pixel" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">#000000</item>
    </style>

    <!-- Cyberpunk Neon -->
    <style name="Theme.DailyFlow.Cyberpunk" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/cyber_primary</item>
        <item name="colorPrimaryVariant">@color/cyber_primary_variant</item>
        <item name="colorSecondary">@color/cyber_secondary</item>
        <item name="android:colorBackground">@color/cyber_bg</item>
        <item name="colorSurface">@color/cyber_surface</item>
        <item name="materialCardViewStyle">@style/Widget.DailyFlow.Card.Cyberpunk</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/cyber_bg</item>
    </style>

    <style name="Widget.DailyFlow.Card.Cyberpunk" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/cyber_surface</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/cyber_primary</item>
        <item name="cardElevation">8dp</item>
    </style>

    <!-- Sunset Warm -->
    <style name="Theme.DailyFlow.Sunset" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/sunset_primary</item>
        <item name="colorPrimaryVariant">@color/sunset_primary_variant</item>
        <item name="colorSecondary">@color/sunset_secondary</item>
        <item name="android:colorBackground">@color/sunset_bg</item>
        <item name="colorSurface">@color/sunset_surface</item>
        <item name="materialCardViewStyle">@style/Widget.DailyFlow.Card.Sunset</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/sunset_primary</item>
    </style>

    <style name="Widget.DailyFlow.Card.Sunset" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">#FFFFFFFF</item>
        <item name="cardElevation">6dp</item>
    </style>

    <!-- Ocean Deep -->
    <style name="Theme.DailyFlow.Ocean" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/ocean_primary</item>
        <item name="colorPrimaryVariant">@color/ocean_primary_variant</item>
        <item name="colorSecondary">@color/ocean_secondary</item>
        <item name="android:colorBackground">@color/ocean_bg</item>
        <item name="colorSurface">@color/ocean_surface</item>
        <item name="materialCardViewStyle">@style/Widget.DailyFlow.Card.Ocean</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/ocean_primary</item>
    </style>

    <style name="Widget.DailyFlow.Card.Ocean" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Forest Green -->
    <style name="Theme.DailyFlow.Forest" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/forest_primary</item>
        <item name="colorPrimaryVariant">@color/forest_primary_variant</item>
        <item name="colorSecondary">@color/forest_secondary</item>
        <item name="android:colorBackground">@color/forest_bg</item>
        <item name="colorSurface">@color/forest_surface</item>
        <item name="materialCardViewStyle">@style/Widget.DailyFlow.Card.Forest</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/forest_primary</item>
    </style>

    <style name="Widget.DailyFlow.Card.Forest" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="cardElevation">3dp</item>
    </style>

    <!-- Mono Dark -->
    <style name="Theme.DailyFlow.MonoDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/mono_primary</item>
        <item name="colorPrimaryVariant">@color/mono_primary_variant</item>
        <item name="colorSecondary">@color/mono_secondary</item>
        <item name="android:colorBackground">@color/mono_bg</item>
        <item name="colorSurface">@color/mono_surface</item>
        <item name="materialCardViewStyle">@style/Widget.DailyFlow.Card.MonoDark</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/mono_bg</item>
    </style>

    <style name="Widget.DailyFlow.Card.MonoDark" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/mono_surface</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/mono_secondary</item>
        <item name="cardElevation">2dp</item>
    </style>

    <!-- Candy Sweet -->
    <style name="Theme.DailyFlow.Candy" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/candy_primary</item>
        <item name="colorPrimaryVariant">@color/candy_primary_variant</item>
        <item name="colorSecondary">@color/candy_secondary</item>
        <item name="android:colorBackground">@color/candy_bg</item>
        <item name="colorSurface">@color/candy_surface</item>
        <item name="materialCardViewStyle">@style/Widget.DailyFlow.Card.Candy</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/candy_primary</item>
    </style>

    <style name="Widget.DailyFlow.Card.Candy" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardBackgroundColor">#FFFFFFFF</item>
        <item name="cardElevation">8dp</item>
    </style>

    <!-- Window animations -->
    <style name="WindowAnimations" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

</resources>
